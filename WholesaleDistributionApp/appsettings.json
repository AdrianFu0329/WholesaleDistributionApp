{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "AWS": {
      "LogGroup": "WholesaleDistributionApp",
      "Region": "us-east-1"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "WholesaleDistributionAppContextConnection":
    // (LOCALDB)
    //"Server=(localdb)\\mssqllocaldb;Database=WholesaleDistributionApp;Trusted_Connection=True;MultipleActiveResultSets=true" 
    // (AMAZON RDS)
    "Server=wholesaledistributionappdb-prod.ckpm7f0tp8ls.us-east-1.rds.amazonaws.com,1433;Database= WholesaleDistributionAppDB-Prod;User ID=admin;Password=Admin123;TrustServerCertificate=True"
  },
  "AWS": {
    "Profile": "default",
    "Region": "us-east-1",
    "BucketName": "wholesaledistributionapp"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.AwsCloudWatch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "AWSSink",
        "Args": {
          "logGroup": "WholesaleDistributionApp",
          "region": "us-east-1",
          "logStreamPrefix": "WholesaleApp",
          "createLogGroup": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "WholesaleDistributionApp"
    }
  }
}